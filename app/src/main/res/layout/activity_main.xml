<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="570dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle2"/>

            <LinearLayout
                android:id="@+id/actionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/imageSelect"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/selectImg"
                    android:textAlignment="center"
                    android:background="@drawable/bgbutton"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/primetimeregular"
                    android:textColor="@color/btnText"
                    android:onClick="selectImage"/>
                <Button
                    android:id="@+id/textRead"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/recognize"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="15dp"
                    android:textAlignment="center"
                    android:background="@drawable/bgbutton"
                    android:fontFamily="@font/primetimeregular"
                    android:textColor="@color/btnText"
                    android:onClick="startRecognising"/>

            </LinearLayout>

            <EditText
                android:id="@+id/editTextOutput"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/actionContainer"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:layout_margin="15dp"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:hint="@string/outputHint"
                android:focusable="false"
                android:clickable="false"
                android:scrollbars="none"
                android:longClickable="false"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>